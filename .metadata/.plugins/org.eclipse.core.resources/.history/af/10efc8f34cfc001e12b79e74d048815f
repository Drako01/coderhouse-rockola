package com.coderhouase.controlador;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.http.MediaType;

import com.coderhouase.modelo.Cancion;
import com.coderhouase.servicio.CancionService;

@RestController
@RequestMapping("/canciones")
public class CancionController {
	
	@Autowired
	private CancionService cancionService;
	
	@GetMapping(value = "/{id}", produces = { MediaType.APPLICATION_JSON_VALUE })
	public List<Cancion> getCancionesByInterprete(Integer intepreteId){
		return cancionService.obtenerCancionesPorIdDeInterprete(intepreteId);
	}

}
